<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/recipe_detail2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bg_color">

                <TextView
                    android:id="@+id/title_ek1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Cách chế biến"
                    android:textColor="@color/_bg__create_recipe_ek2_color"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Thông tin món ăn -->
            <LinearLayout
                android:id="@+id/Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Hình ảnh món ăn -->
                <ImageView
                    android:id="@+id/food_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="30dp"
                    android:contentDescription="food_thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_thumbnail" />

                <!-- Review -->
                <RelativeLayout
                    android:id="@+id/label___reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/total_reviews___label"
                        android:layout_width="118dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="49dp"
                        android:text="@string/total_reviews___label_string"
                        android:textColor="@color/total_reviews___label_color"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp">

                        <RelativeLayout
                            android:id="@+id/icon_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:id="@+id/star"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="2dp"
                                android:contentDescription="star"
                                android:src="@drawable/star" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/label_ek6"
                            android:layout_width="41dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="19dp"
                            android:text="@string/label_ek6_string"
                            android:textColor="@color/title_color"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- Khung thông tin -->
                <RelativeLayout
                    android:id="@+id/creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:contentDescription="avatar"
                        android:src="@drawable/avatar" />

                    <!-- Thông tin -->
                    <RelativeLayout
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="51dp">

                        <!-- Địa điểm -->
                        <RelativeLayout
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">

                            <RelativeLayout
                                android:id="@+id/iconly_curved_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"/>
                        </RelativeLayout>

                        <!-- Họ tên -->
                        <TextView
                            android:id="@+id/label_ek8"
                            android:layout_width="161dp"
                            android:layout_height="33dp"
                            android:text="Admin"
                            android:textColor="@color/title_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- Nút lưu công thức -->
                <ImageView
                    android:id="@+id/save"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="340dp"
                    android:layout_marginTop="-90dp"
                    android:src="@drawable/union" />
            </LinearLayout>

            <!-- Steps -->
            <LinearLayout
                android:id="@+id/steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header hướng dẫn -->
                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hướng dẫn"
                        android:textColor="@color/title_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:text="@string/label_string"
                        android:textColor="@color/title_color"
                        android:textSize="14sp" />
                </RelativeLayout>

                <!-- Steps (to be dynamically added) -->
                <LinearLayout
                    android:id="@+id/steps_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Steps will be added here dynamically -->
                </LinearLayout>
            </LinearLayout>

            <!-- Bình luận -->
            <LinearLayout
                android:id="@+id/ingredients_ek1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!-- Bình luận header -->
                <RelativeLayout
                    android:id="@+id/header_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/binhLuan"
                        android:layout_width="189dp"
                        android:layout_height="42dp"
                        android:text="Bình luận"
                        android:textColor="@color/rectangle_1_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Reviews (to be dynamically added) -->
                <LinearLayout
                    android:id="@+id/reviews_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">
                    <!-- Reviews will be added here dynamically -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
